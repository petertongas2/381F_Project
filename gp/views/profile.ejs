<html>
    <head>
        <title>個人資料 - 演唱會查詢系統</title>
        <link rel="stylesheet" href="/style.css">
    </head>
<body>
    <div class="navbar">
        <a href="/reset-password" class="btn">重設密碼</a>
        <a href="/content" class="btn">返回列表</a>
        <a href="/logout" class="btn btn-danger">登出</a>
    </div>
    <div class="container">
        <div class="header">
            <h1>個人資料</h1>
            <div class="welcome-message">
                <h2>歡迎, <%= user.name %></h2>
                <p>帳號類型: <%= user.type %></p>
            </div>
        </div>
        
        <div class="profile-section">
            <div class="tab-buttons">
                <button class="tab-btn active" onclick="showTab('favorite')">收藏的演唱會</button>
            </div>
        
            <div id="favorite" class="tab-content">
                <h3>收藏的演唱會 (<%= favoriteConcerts.length %>)</h3>
                <div class="concert-grid">
                    <% favoriteConcerts.forEach(concert => { %>
                        <div class="concert-card">
                            <h4><%= concert.title %></h4>
                            <p>日期: <%= concert.date %></p>
                            <p>地點: <%= concert.location %></p>
                            <a href="/details?_id=<%= concert._id %>" class="btn">查看詳情</a>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>

        
    </div>

    <script>
    function showTab(tabId) {
        document.querySelectorAll('.tab-content').forEach(tab => {
            tab.style.display = 'none';
        });
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        document.getElementById(tabId).style.display = 'block';
        event.target.classList.add('active');
    }
    </script>
</body>
</html>
